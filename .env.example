# Sales Enablement Pitch Generator - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# Anthropic API Key - Get yours at https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# =============================================================================
# Optional LLM Settings
# =============================================================================

# Default model to use (claude-opus-4-20250514, claude-sonnet-4-20250514, claude-3-5-haiku-20241022)
# LLM_DEFAULT_MODEL=claude-sonnet-4-20250514

# Maximum tokens for responses
# LLM_MAX_TOKENS=4096

# Temperature for generation (0.0 - 1.0)
# LLM_TEMPERATURE=0.7

# Cost alert threshold in USD (warns when exceeded)
# LLM_COST_ALERT_THRESHOLD=10.0

# Request timeout in seconds
# LLM_TIMEOUT=120

# =============================================================================
# Database Configuration (Future)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/pitch_generator

# =============================================================================
# Vector Store Configuration (Future)
# =============================================================================

# ChromaDB persistence directory
# CHROMA_PERSIST_DIR=./data/chroma

# =============================================================================
# Storage Configuration (Future)
# =============================================================================

# Local storage directory for extractions
# STORAGE_DIR=./data/extractions

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Log LLM requests (for debugging)
# LLM_LOG_REQUESTS=false

# Log LLM responses (for debugging)
# LLM_LOG_RESPONSES=false
